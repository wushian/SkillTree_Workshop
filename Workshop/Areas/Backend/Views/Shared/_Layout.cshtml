@using Workshop.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>@ViewBag.Title - SkillTree MVC Backend Sample</title>

	<!-- Bootstrap core CSS -->
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

    <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

	<link href="~/Content/Site.css" rel="stylesheet" />

	@RenderSection("styles", required: false)
</head>

<body>

    <div class="container">
        <div class="header">
            <ul class="nav nav-pills pull-right">
                <li class="@(Html.IsCurrentController("Home") ? "active" : "")"><a href="@Url.Action("Index", "Home", new { Area = "Backend" })">Home</a></li>
				<li class="@(Html.IsCurrentController("Article") ? "active" : "")"><a href="@Url.Action("Index", "Article", new { Area = "Backend" })">文章管理</a></li>
				<li class="@(Html.IsCurrentController("Category") ? "active" : "")"><a href="@Url.Action("Index", "Category", new { Area = "Backend" })">分類管理</a></li>
				<li class="@(Html.IsCurrentController("SystemUser") ? "active" : "")"><a href="@Url.Action("Index", "SystemUser", new { Area = "Backend" })">人員管理</a></li>
				<li class="dropdown pull-right">
					<a href="#" data-toggle="dropdown" class="dropdown-toggle">使用者：@(WebSiteHelper.CurrentUserName) <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><a href="@Url.Action("Logout", "Home")">登出</a></li>
					</ul>
				</li>
            </ul>
            <h3 class="text-muted">SkillTree MVC Sample</h3>

        </div>

        <div class="row">
            <div class="container">

                @RenderBody()

            </div>
        </div>

        <div>
            <p>&copy; SkillTree Backend 2014 (<a href="http://skilltree.my">我的技能樹</a>) </p>
        </div>

    </div> <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
    <script src="~/Scripts/ckeditor/styles.js"></script>
    <script src="~/Scripts/ckeditor/adapters/jquery.js"></script>

    <script src="~/Scripts/backend.paging.js"></script>
    <script src="~/Scripts/backend.js"></script>

	@RenderSection("scripts", required: false)
</body>
</html>
