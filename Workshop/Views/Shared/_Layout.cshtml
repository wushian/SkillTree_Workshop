@using Workshop.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>@ViewBag.Title - SkillTree MVC Sample</title>

	<!-- Bootstrap core CSS -->
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-theme.css" rel="stylesheet">
	@RenderSection("styles", required: false)
</head>

<body>

	<div class="container">
	
		<div class="header">
			<ul class="nav nav-pills pull-right">
				<li class="@(Html.IsCurrentAction("Index", "Home") ? "active" : "")">
					<a href="~/">Home</a>
				</li>
				<li class="@(Html.IsCurrentAction("Hot", "Article") ? "active" : "")">
					<a href="@Url.Action("Hot", "Article")">熱門文章</a>
				</li>
				<li class="@(Html.IsCurrentAction("List", "Article") ? "active" : "")">
					<a href="@Url.Action("List", "Article")">文章列表</a>
				</li>
				<li><a href="@Url.Action("Rss", "Feed")">RSS</a></li>
			</ul>
			<h3 class="text-muted">SkillTree MVC Sample</h3>
		</div>

		@RenderSection("jumbotron", required: false)
		@RenderSection("nav", required: false)
		@RenderBody()

		<div>
			<p>&copy; SkillTree @DateTime.Now.Year (<a href="http://skilltree.my">我的技能樹</a>) </p>
		</div>

	</div> <!-- /container -->
	<!-- Bootstrap core JavaScript
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/bootstrap.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>